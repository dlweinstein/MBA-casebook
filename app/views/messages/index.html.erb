<div class="page-header">
  <h1>
    Messages
    <a href="/messages/new" class="btn btn-lg btn-success">New Message</a>
  </h1>
</div>

<div>
  <h3>Received Messages</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sender First Name</th>
        <th>Sender Last Name</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>

      <% @messages.each do |message| %>
      <!-- If current user is the receiver -->
      <% if current_user.id ==message.receiver_id %>
      <tr>
        <td><%= message.sender.first_name %></td>
        <td><%= message.sender.last_name %></td>
        <td><%= message.created_at %></td>
        <td><a href="/messages/<%= message.id %>" class="btn btn-primary">Show</a></td>
      </tr>
      
      <% end %>
      <% end %>
    </table>
  </div>
</div>


<div>
  <h3>Sent Messages</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Recipient First Name</th>
        <th>Recipient Last Name</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>

      <% @messages.each do |message| %>
      <!-- If current user is the sender -->
      <% if current_user.id ==message.sender_id %>
      <tr>
        <td><%= message.receiver.first_name %></td>
        <td><%= message.receiver.last_name %></td>
        <td><%= message.created_at %></td>
        <td>
          <a href="/messages/<%= message.id %>" class="btn btn-primary">Show</a>
          <a href="/messages/<%= message.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_message/<%= message.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
