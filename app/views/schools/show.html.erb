<div class="page-header">
  <h3>Partner School</h3>
</div>

<div class="row">
  <div class="col-md-5 mb-3">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @school.name %></dd>

      <dt>Students registered </dt>
      <dd>
        <%= @school.users.count %>
      </dd>

      <dt>Cases submitted </dt>
      <dd>
        <%= @school.cases.count %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/schools" class="btn btn-primary">
        Back
      </a>
      <a href="/schools/<%= @school.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_school/<%= @school.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
