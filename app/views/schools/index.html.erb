<div class="page-header">
  <h1>
    Schools
    <a href="/schools/new" class="btn btn-lg btn-success">New School</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Number of Students</th>
        <th>Number of Cases Submitted</th>
        <th>Action</th>
      </tr>

      <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.users.count %></td>
        <td><%= school.cases.count %></td>
          <td>
            <a href="/schools/<%= school.id %>" class="btn btn-primary">Show</a>
              <!-- <a href="/schools/<%= school.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_school/<%= school.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          </td> -->
        </tr>
        <% end %>
      </table>
    </div>
  </div>
